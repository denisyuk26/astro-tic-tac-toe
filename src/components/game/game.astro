<script>
  import "./game";
</script>

<div class="container">
  <h2 id="game-status"></h2>
  <div class="game-container">
    <div data-index="0" class="cell"></div>
    <div data-index="1" class="cell"></div>
    <div data-index="2" class="cell"></div>
    <div data-index="3" class="cell"></div>
    <div data-index="4" class="cell"></div>
    <div data-index="5" class="cell"></div>
    <div data-index="6" class="cell"></div>
    <div data-index="7" class="cell"></div>
    <div data-index="8" class="cell"></div>
  </div>

  <button id="restart-btn">Restart</button>
</div>
<style>
  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100vh;
    gap: 60px;
    width: 100%;
    background-image: url("./assets/bg.jpeg");
    background-repeat: no-repeat;
    background-size: cover;
  }

  #game-status {
    min-height: 70px;
    text-align: center;
    margin: 0;
    font-size: 60px;
    color: #fff;
    word-spacing: 20px;
  }

  .game-container {
    width: 180px;
    display: grid;
    justify-content: center;
    align-content: center;
    justify-items: center;
    align-items: center;
    grid-template-columns: repeat(3, 1fr);
    margin: 0 auto;
  }

  .cell:nth-child(1),
  .cell:nth-child(2),
  .cell:nth-child(3) {
    border-top: none;
  }

  .cell:nth-child(1),
  .cell:nth-child(4),
  .cell:nth-child(7) {
    border-left: none;
  }

  .cell:nth-child(3),
  .cell:nth-child(6),
  .cell:nth-child(9) {
    border-right: none;
  }

  .cell:nth-child(7),
  .cell:nth-child(8),
  .cell:nth-child(9) {
    border-bottom: none;
  }

  .cell {
    position: relative;
    width: 150px;
    height: 150px;
    border: 10px solid rgba(170, 160, 160, 0.665);
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: all ease 3s;
  }

  .cell:not(:empty) {
    cursor: default;
  }

  .cell > .x {
    align-self: center;
    color: rgb(188, 30, 30);
    width: 140px;
    cursor: default;
    text-align: center;
  }

  .cell > .o {
    align-self: center;
    color: rgb(15, 171, 75);
    width: 140px;
    cursor: default;
    text-align: center;
  }

  .vertical::after {
    content: "";
    width: 10px;
    height: 120%;
    background-color: rgb(207, 200, 200);
    position: absolute;
    z-index: 3;
  }

  .horizontal::after {
    content: "";
    width: 10px;
    height: 120%;
    background-color: rgb(207, 200, 200);
    position: absolute;
    transform: rotate(90deg);
    z-index: 3;
  }

  .diag_left::after {
    content: "";
    width: 10px;
    height: 170%;
    background-color: rgb(207, 200, 200);
    position: absolute;
    transform: rotate(-45deg);
    z-index: 3;
  }

  .diag_right::after {
    content: "";
    width: 10px;
    height: 170%;
    background-color: rgb(207, 200, 200);
    position: absolute;
    transform: rotate(45deg);
    z-index: 3;
  }

  button {
    max-width: 400px;
    width: 100%;
    height: 90px;
    margin: 0 auto;
    font-size: 36px;
    cursor: pointer;
    outline: none;
    border: none;
    border-radius: 3px;
    background-color: rgba(170, 160, 160, 0.665);
  }

  button:hover {
    background-color: rgba(218, 215, 215, 0.665);
  }
</style>
