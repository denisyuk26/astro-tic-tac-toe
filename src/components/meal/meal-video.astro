---
import classNames from 'classnames'
import { Meal } from '@domain/entities/meal.types'

type Props = {
  video: Meal['video']
  className?: string
}

const { video, className } = Astro.props
---

{
  video && (
    <div class={classNames('video', className)}>
      <h2 class="title">Video Recipe</h2>
      <div class="video-wrap">
        <iframe
          width="420"
          height="455"
          src={`https://www.youtube.com/embed/${video.slice(-11)}`}
          allow-full-screen
        />
      </div>
    </div>
  )
}
<style lang="scss">
  .video {
    display: flex;
    flex-direction: column;
    gap: 20px;

    &-wrap {
      max-width: 900px;
      width: 100%;
      position: relative;
      height: 100%;
      margin: 0 auto;

      iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
    }
  }

  .title {
    font-size: 30px;
    font-weight: 700;
    text-align: center;
  }
</style>
