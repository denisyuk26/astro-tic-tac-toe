---
import { Image } from '@astrojs/image/components'
import classNames from 'classnames'
type Props = {
  imageSrc: string
  className?: string
}
const { imageSrc, className } = Astro.props
---

<div class={classNames('image', className)}>
  <Image src={imageSrc} alt="meal image" width={380} height={380} />
</div>
<style lang="scss">
  .image {
    display: flex;
    align-self: flex-start;
  }

  img {
    max-width: 420px;
    width: 100%;
    max-height: 420px;
    border-radius: 5px;
    align-self: center;
  }
</style>
