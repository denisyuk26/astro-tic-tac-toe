---
import { Image } from '@astrojs/image/components'
import classNames from 'classnames'
type Props = {
  imageSrc: string
  className?: string
}
const { imageSrc, className } = Astro.props
---

<div class={classNames('image', className)}>
  <Image src={imageSrc} alt="meal image" width={340} height={320} />
</div>
<style lang="scss">
  @import '../../styles/mixins.scss';

  .image {
    display: flex;
    align-self: flex-start;
  }

  img {
    max-width: 420px;
    width: 100%;
    max-height: 420px;
    border-radius: 5px;

    @include tablets() {
      border-radius: 0px;
      margin: 0 auto;
    }
  }
</style>
