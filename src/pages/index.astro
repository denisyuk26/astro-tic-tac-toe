---
import Game from '../components/game/game.astro'
import Layout from '../layouts/Layout.astro'
import TopScreen from '../components/top-screen/top-screen.astro'
import { getRandomMealId } from '../domain/helper/get-random-meal-id'

const id = await getRandomMealId()
Astro.cookies.set('meal_id', id)
---

<Layout title="Welcome to Astro.">
  <TopScreen />
  <main id="game">
    <Game />
  </main>
</Layout>

<style>
  main {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 auto;
    background-color: rgba(20, 25, 29, 0.5);
    background-image: url('./assets/parallax-1.avif');
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
