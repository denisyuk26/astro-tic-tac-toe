{
  // "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2020",
    "module": "es2020",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["astro/client", "node", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  }
}
